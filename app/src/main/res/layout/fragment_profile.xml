<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F0F5"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6C5444">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:src="@drawable/arc3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/default_image"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_username"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Username"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/outfit_medium"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAlignment="center"
                android:fontFamily="@font/outfit_regular"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/bt_pet"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="35dp"
                android:backgroundTint="#DECDBF"
                android:drawableLeft="@drawable/baseline_add_circle_24"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/outfit_medium"
                android:text="Add Pet"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:strokeColor="#8A8A8A"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/bt_your_pet"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:backgroundTint="#DECDBF"
                android:drawableLeft="@drawable/baseline_pets_24"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/outfit_medium"
                android:text="Your Pet"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:strokeColor="#8A8A8A"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/bt_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:backgroundTint="#DECDBF"
                android:drawableLeft="@drawable/baseline_edit_square_24"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/outfit_medium"
                android:text="Edit Profile"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:strokeColor="#8A8A8A"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/bt_logout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="70dp"
                android:backgroundTint="#6C5444"
                android:drawableRight="@drawable/baseline_logout_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/outfit_medium"
                android:text="Logout"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="60dp"
                app:strokeColor="#8A8A8A"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>