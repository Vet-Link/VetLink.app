<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_marginStart="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:lineHeight="26dp"
        android:textColor="@color/white"
        android:text="Doctor, my cat hasn't eaten for two days. What should I do?"
        android:background="@drawable/layout_message_1"
        android:padding="16dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/layout_message_2"
        android:fontFamily="@font/outfit_medium"
        android:lineHeight="26dp"
        android:padding="16dp"
        android:text="Are there any other symptoms you have noticed, such as vomiting or diarrhea?"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/messageTextView"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/layout_message_1"
        android:fontFamily="@font/outfit_medium"
        android:lineHeight="26dp"
        android:padding="16dp"
        android:layout_marginStart="55dp"
        android:text="Nothing, it's just that he looks lethargic."
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/layout_message_2"
        android:fontFamily="@font/outfit_medium"
        android:lineHeight="26dp"
        android:padding="16dp"
        android:text="Bring your cat to the clinic for a further examination."
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_message_1"
        android:fontFamily="@font/outfit_medium"
        android:lineHeight="26dp"
        android:padding="16dp"
        android:layout_marginTop="25dp"
        android:text="Okay Doctor, thank you!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="70dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="479dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTint="#EFEFEF"
        android:drawableRight="@drawable/baseline_send_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Message"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#535353"
        android:textSize="18sp"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#8A8A8A"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>